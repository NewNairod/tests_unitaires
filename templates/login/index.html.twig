{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 id='login-form'>Connexion</h1>
            <hr>
            <div class="row">
                <div class="col-sm-6 mx-auto">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path('login') }}" method="post">
                        <div class="mb-3">
                            <label for="username">Email</label>
                            <input type="text" name="_username" id="username" value="{{ last_username }}" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="username">Mot de passe </label>
                            <input type="password" name="_password" id="password" class="form-control">
                        </div>

                        <button type="submit" class="btn btn-outline-success w-100">Connexion</button>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>    
{% endblock %}
